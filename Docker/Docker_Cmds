docker build -t <imagename>:<version> .

docker build -t <hostname/IP:port>/<imagename>:<version> .

docker build -t <repodetails>:<version> -f dockerfilename . # use -f if docker file name is different then dockerfilename

#The Version is your build number of jenkins.

